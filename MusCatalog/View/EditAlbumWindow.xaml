<Window x:Class="MusCatalog.View.EditAlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:MusCatalog"
        Title="Edit Album"
        SizeToContent="WidthAndHeight"
        BorderBrush="AliceBlue">

    <Window.Resources>
        <sys:Double x:Key="albumWidth">300</sys:Double>
        <sys:Double x:Key="albumHeight">300</sys:Double>

        <sys:Int32 x:Key="star1">1</sys:Int32>
        <sys:Int32 x:Key="star2">2</sys:Int32>
        <sys:Int32 x:Key="star3">3</sys:Int32>
        <sys:Int32 x:Key="star4">4</sys:Int32>
        <sys:Int32 x:Key="star5">5</sys:Int32>

        <local:PhotoConverter x:Key="photoConverter"/>
        <local:RateConverter x:Key="rateConverter"/>
        <local:RateStarsConverter x:Key="rateStarsConverter"/>
        <local:StarsVisibilityConverter x:Key="starsVisibilityConverter"/>
        
        <DataTemplate x:Key="SongTemplate">
            <WrapPanel>
                <Label Content="{Binding Path=TrackNo}" Foreground="White" FontSize="12"/>
                <Label Content="{Binding Path=Name}" Foreground="White" FontSize="17"/>
                <Label Content="{Binding Path=TimeLength}" Foreground="LightGreen"/>
            </WrapPanel>
        </DataTemplate>

        <Style TargetType="{x:Type ListBoxItem}" x:Key="SongStyle">
            <Setter Property="ContentTemplate" Value="{StaticResource SongTemplate}" />
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            </Style.Resources>
        </Style>
    </Window.Resources>

    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#001122" Offset="0" />
            <GradientStop Color="#ffffff" Offset="3"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Name="AlbumInfoPanel">
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Load from file..." Margin="15,20,3,10" Padding="5" Click="LoadAlbumImageFromFile"/>
                <Button Content="Load from clipboard" Margin="0,20,3,10" Click="LoadAlbumImageFromClipboard"/>
            </WrapPanel>
            <Image x:Name="AlbumCover" Grid.Column="0"
                   Source="{Binding Converter={StaticResource photoConverter}, ConverterParameter={StaticResource albumHeight}}"
                   Width="{StaticResource albumWidth}" Height="{StaticResource albumHeight}"
                   HorizontalAlignment="Center" VerticalAlignment="Top">
            </Image>
            <DockPanel>
                <DockPanel HorizontalAlignment="Left" Margin="15,0,0,0">
                    <StackPanel>
                        <TextBox Name="rate" FontSize="18" Foreground="Black" Background="Orange" FontFamily="Arial Narrow" Text="{Binding Path=Rate, Converter={StaticResource rateConverter}}" />
                    </StackPanel>
                    <StackPanel Name="rateAlbum" Orientation="Horizontal" Margin="5,0,0,0">
                        <Image Source="{Binding Converter={StaticResource rateStarsConverter}, ConverterParameter={StaticResource star1}}" 
                               Width="25"
                               MouseMove="StarMouseMove" MouseLeave="StarMouseLeave" MouseDown="StarMouseDown"/>
                        <Image Source="{Binding Converter={StaticResource rateStarsConverter}, ConverterParameter={StaticResource star2}}"
                               Width="25"
                               MouseMove="StarMouseMove" MouseLeave="StarMouseLeave" MouseDown="StarMouseDown" />
                        <Image Source="{Binding Converter={StaticResource rateStarsConverter}, ConverterParameter={StaticResource star3}}" 
                               Width="25"
                               MouseMove="StarMouseMove" MouseLeave="StarMouseLeave" MouseDown="StarMouseDown" />
                        <Image Source="{Binding Converter={StaticResource rateStarsConverter}, ConverterParameter={StaticResource star4}}"
                               Width="25"
                               MouseMove="StarMouseMove" MouseLeave="StarMouseLeave" MouseDown="StarMouseDown" />
                        <Image Source="{Binding Converter={StaticResource rateStarsConverter}, ConverterParameter={StaticResource star5}}"
                               Width="25"
                               MouseMove="StarMouseMove" MouseLeave="StarMouseLeave" MouseDown="StarMouseDown" />
                    </StackPanel>
                </DockPanel>
                <TextBox Text="{Binding TotalTime}" Background="Maroon" Width="auto" HorizontalAlignment="Right" Margin="0,-15,40,0" 
                       Foreground="White" FontSize="24" FontFamily="Broadway"/>
            </DockPanel>

            <StackPanel Margin="10,0,0,15">
                <Label Content="{Binding Path=Performer.Name}" FontFamily="Stencil" Foreground="White" FontSize="22" HorizontalAlignment="Center" Margin="0,10,0,0" />
                <WrapPanel HorizontalAlignment="Center">
                    <Label Foreground="White">Name: </Label>
                    <TextBox Text="{Binding Path=Name}" FontFamily="Arial Narrow" FontSize="18" HorizontalAlignment="Center" Margin="5,0,0,5" MinWidth="280" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Center">
                    <Label Foreground="White">Year: </Label>
                    <TextBox Text="{Binding Path=ReleaseYear}" FontFamily="Broadway" FontSize="18" HorizontalAlignment="Center" Margin="5,0,0,10" MinWidth="80"/>
                </WrapPanel>
                <Button Content="Save album information" Padding="5" Click="SaveAlbumInformation" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20">
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Parse mp3..." Padding="5" Margin="5" Click="ParseMp3Click" />
                <Button Content="Fix names" Padding="5" Margin="5" Click="FixNamesClick" />
                <Button Content="Fix times" Padding="5" Margin="5,5,90,5" Click="FixTimesClick" />
                <Button Content="Clear all" Padding="5" Margin="5" />
                <Button Content="Save all" Padding="5" Margin="5" />
                <Button Content="Add..." Padding="5" Margin="5" Click="AddSongClick" />
            </WrapPanel>
            <DataGrid x:Name="GridSongs" Grid.Column="1" ItemsSource="{Binding}" AutoGenerateColumns="False" FontSize="14"
                      AlternatingRowBackground="#daffff"  AlternationCount="2" CanUserAddRows="False"
                      HorizontalGridLinesBrush="White" VerticalGridLinesBrush="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="No" Binding="{Binding TrackNo}" Width="30" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250" />
                    <DataGridTextColumn Header="Time" Binding="{Binding TimeLength}" Width="50" />
                    <DataGridTextColumn Header="Rate" Binding="{Binding Rate, Converter={StaticResource rateConverter}}" Width="70" />
                    <DataGridTemplateColumn Width="120" Header="Actions">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <Button Content="Save" CommandParameter="{Binding ID}" Click="SaveSongClick"/>
                                    <Button Content="Delete" CommandParameter="{Binding ID}" Click="DeleteSongClick"/>
                                </WrapPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
